<h1 class="text-center mt-4"><%= @client.username %>'s profile</h1>

<%= gravatar_for @client, size: 200 %>


<% if logged_in? && @client == current_client %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_client_path(@client), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 class="text-center mt-4">Articles</h3>
<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>


<%= render 'articles/article' %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
